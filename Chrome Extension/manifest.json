{
   "author": "Shaban Shaame",
   "background": {
      "scripts": [ "js/jquery.min.js", "js/bitcoinjs-min.js" ]
   },
   "browser_action": {
      "default_icon": "icon-crystalbox-128.png",
      "default_popup": "popup.html"
   },
   "description": "Chrome Extension Bitcoin and Counterparty Wallet",
   "icons": {
      "128": "icon-crystalbox-128.png",
      "16": "icon-crystalbox-16.png",
      "48": "icon-crystalbox-48.png"
   },
   "content_scripts": [
    {
      "matches": ["https://letstalkbitcoin.com/*","https://chain.so/*","http://api.moonga.com/*"],
      "js": ["js/jquery.min.js", "js/tipbutton.js"]
    }
   ],
   "web_accessible_resources": [
        "*.png",
        "tipsplash.html",
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "js/aes.js",
        "js/biginteger.js",
        "js/utxo.js",
        "js/xcp-js/transactions.js",
        "js/xcp-js/rc4.js",
        "js/xcp-js/convert-type.js",
        "js/xcp-js/decode.js",
        "popup.js",
        "js/mnemonic.js",
        "js/bitcore/bitcore.min.js",
        "js/bitcoinsig.js",
        "js/brainlite.js",
        "js/bitcoinjs-min.js",
        "js/qrcode.min.js",
        "bootstrap.min.css",
        "tipsplash.js",
        "tipticker.js"
   ],
   "manifest_version": 2,
   "name": "BitCrystals Companion Wallet",
   "permissions": [ "storage", "clipboardWrite" ],
   "short_name": "BitCrystals Companion Wallet",
   "version": "0.4.0"
}
